rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Price history - public read, admin write only (from n8n)
    match /priceHistory/{document} {
      allow read: if true;
      allow write: if false; // Writes come from Admin SDK which bypasses rules
    }
    
    // User-specific data - only authenticated owner can read/write
    match /bookings/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /income/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /expenses/{docId} {
      allow read, write: if request.auth != null;
    }
    
    match /objectives/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
